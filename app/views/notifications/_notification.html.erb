<li id="<%= dom_id(notification) %>" class="p-3 hover:bg-gray-100 rounded-lg flex justify-between items-center">
  <div>
    <p class="<%= notification.read ? 'text-gray-500' : 'font-medium text-gray-800' %>">
      <%= notification.message %>
    </p>
    <small class="text-xs text-gray-400"><%= time_ago_in_words(notification.created_at) %> atrás</small>
  </div>

  <% unless notification.read %>
    <%= button_to "✔", mark_as_read_notification_path(notification),
                  method: :patch,
                  data: { turbo_stream: true },
                  class: "text-xs text-blue-600 hover:text-blue-800" %>
  <% end %>
</li>