<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4 py-12">
  <div class="w-full max-w-md bg-white rounded-3xl shadow-lg border border-gray-200 p-8 sm:p-10 transition-all duration-300">

    <!-- Título -->
    <h2 class="text-3xl sm:text-4xl font-extrabold text-center text-blue-600 mb-6">
      Esqueceu sua senha?
    </h2>
    <p class="text-center text-gray-600 mb-6">
      Informe seu e-mail para receber instruções de redefinição de senha.
    </p>

    <!-- Formulário -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo Email -->
      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "seu@email.com", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-2xl text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all duration-200" %>
      </div>

      <!-- Botão -->
      <div>
        <%= f.submit "Enviar instruções", class: "w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-2xl shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-blue-300" %>
      </div>

    <% end %>

    <!-- Links adicionais -->
    <div class="mt-6 text-center space-y-2">
      <%= link_to "Voltar ao Login", new_session_path(resource_name), class: "block text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" %>
      <%= link_to "Registrar nova conta", new_user_registration_path, class: "block text-green-600 hover:text-green-800 font-medium transition-colors duration-200" %>
    </div>

  </div>
</div>
