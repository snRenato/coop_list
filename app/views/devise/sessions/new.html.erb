<div class="min-h-screen flex items-center justify-center px-4 py-10">
  
  <div class="w-full max-w-md 
       bg-white dark:bg-gray-800 
       shadow-xl rounded-3xl p-8 sm:p-10 md:p-12 
       border border-gray-200 dark:border-gray-700 
       transition-all duration-300">

    <h2 class="text-3xl sm:text-4xl font-extrabold text-center 
               text-gray-900 dark:text-white mb-8">
      Log in
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form" }) do |f| %>

      <div class="space-y-5">

        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
          
          <%= f.email_field :email,
                autofocus: true,
                required: true,
                autocomplete: "email",
                placeholder: "you@example.com",
                class: "block w-full px-4 py-3 rounded-2xl shadow-sm sm:text-sm transition-all duration-200
                        border border-gray-300 dark:border-gray-600
                        bg-gray-50 dark:bg-gray-700
                        text-gray-900 dark:text-white
                        placeholder-gray-400 dark:placeholder-gray-500
                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
          
          <%= f.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "block w-full px-4 py-3 rounded-2xl shadow-sm sm:text-sm transition-all duration-200
                        border border-gray-300 dark:border-gray-600
                        bg-gray-50 dark:bg-gray-700
                        text-gray-900 dark:text-white
                        placeholder-gray-400 dark:placeholder-gray-500
                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            
            <%= f.check_box :remember_me,
                  class: "h-4 w-4 rounded
                          border-gray-300 dark:border-gray-600
                          bg-gray-50 dark:bg-gray-700
                          text-blue-600 dark:text-blue-500
                          focus:ring-blue-500 dark:focus:ring-blue-600" %>
            
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900 dark:text-gray-100" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in",
                class: "w-full flex justify-center py-3 px-6 border border-transparent rounded-2xl shadow-lg 
                          text-white font-semibold 
                          bg-green-600 hover:bg-green-700 
                          dark:bg-green-500 dark:hover:bg-green-600 
                          focus:outline-none focus:ring-4 focus:ring-green-300 dark:focus:ring-green-400/50 
                          transition-transform duration-200 transform hover:-translate-y-0.5" %>
        </div>

      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>