<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4 py-10">
  <div class="w-full max-w-md bg-white shadow-xl rounded-3xl p-8 sm:p-10 md:p-12 transition-all duration-300">

    <!-- Título -->
    <h2 class="text-3xl sm:text-4xl font-extrabold text-center text-gray-900 mb-8">
      Log in
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form" }) do |f| %>

      <div class="space-y-5">

        <!-- Email -->
        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                autofocus: true,
                required: true,
                autocomplete: "email",
                placeholder: "you@example.com",
                class: "block w-full px-4 py-3 border border-gray-300 rounded-2xl text-gray-900 bg-gray-50 placeholder-gray-400 shadow-sm
                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all duration-200" %>
        </div>

        <!-- Senha -->
        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "block w-full px-4 py-3 border border-gray-300 rounded-2xl text-gray-900 bg-gray-50 placeholder-gray-400 shadow-sm
                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all duration-200" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me,
                  class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

        <!-- Botão de login -->
        <div>
          <%= f.submit "Log in",
                class: "w-full py-3 px-6 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-2xl shadow-lg
                        focus:outline-none focus:ring-4 focus:ring-blue-300 transition-transform duration-200 transform hover:-translate-y-0.5" %>
        </div>

      </div>
    <% end %>

    <!-- Links adicionais -->
    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
