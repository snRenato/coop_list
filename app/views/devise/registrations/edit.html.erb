<div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center py-10 px-4">
  <div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-8">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
      Editar Perfil
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Nome -->
      <div class="mb-4">
        <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, autofocus: true, placeholder: "Seu nome completo", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <!-- Email -->
      <div class="mb-4">
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="text-sm text-yellow-600 mb-3">
          Aguardando confirmação para: <%= resource.unconfirmed_email %>
        </p>
      <% end %>

      <!-- Senha -->
      <div class="mb-4">
        <%= f.label :password, "Nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Deixe em branco se não for alterar", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mt-1"><%= @minimum_password_length %> caracteres mínimos</p>
        <% end %>
      </div>

      <!-- Confirmação de senha -->
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <!-- Senha atual -->
      <div class="mb-6">
        <%= f.label :current_password, "Senha atual", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Necessário para confirmar as alterações", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <!-- Botão salvar -->
      <div class="flex justify-center">
        <%= f.submit "Salvar alterações", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg shadow-md transition duration-200" %>
      </div>
    <% end %>
  </div>

  <!-- Cancelar conta -->
  <div class="w-full max-w-md mt-8 bg-white shadow-md rounded-2xl p-6 text-center">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Excluir conta</h3>
    <p class="text-sm text-gray-600 mb-4">Se você não está satisfeito, pode excluir sua conta permanentemente.</p>

    <%= button_to "Cancelar minha conta", registration_path(resource_name),
      data: { confirm: "Tem certeza que deseja excluir sua conta?", turbo_confirm: "Tem certeza que deseja excluir sua conta?" },
      method: :delete,
      class: "bg-red-600 hover:bg-red-700 text-white font-semibold px-5 py-2 rounded-lg shadow-md transition duration-200" %>

    <div class="mt-6">
      <%= link_to "Voltar", :back, class: "text-sm text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
