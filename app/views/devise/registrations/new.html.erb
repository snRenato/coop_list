<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4 py-12">
  <div class="max-w-md w-full space-y-8">

    <!-- Título / Logo -->
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900">
        Criar sua conta
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Ou
        <%= link_to "entrar com sua conta existente", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
      </p>
    </div>

    <!-- Card do Formulário -->
    <div class="bg-white py-8 px-6 shadow-xl rounded-3xl sm:px-10 md:px-12 transition-all duration-300">
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-5">
          <!-- Name -->
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, autofocus: true, placeholder: "John Doe", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-2xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all duration-200" %>
          </div>

          <!-- Email -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autocomplete: "email", placeholder: "seu@email.com", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-2xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all duration-200" %>
          </div>

          <!-- Senha -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-400">Mínimo <%= @minimum_password_length %> caracteres</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Digite sua senha", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-2xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all duration-200" %>
          </div>

          <!-- Confirmação de senha -->
          <div>
            <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme sua senha", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-2xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition-all duration-200" %>
          </div>

          <!-- Botão -->
          <div>
            <%= f.submit "Criar Conta", class: "w-full flex justify-center py-3 px-6 border border-transparent rounded-2xl shadow-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 font-semibold transition-transform duration-200 transform hover:-translate-y-0.5" %>
          </div>

        </div>
      <% end %>

      <!-- Links adicionais -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Já possui uma conta?
          <%= link_to "Entre aqui", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
        </p>
      </div>
      
    </div>
  </div>
</div>
