<!-- app/views/devise/registrations/new.html.erb -->

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    
    <!-- Título / Logo -->
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Criar sua conta
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Ou
        <%= link_to "entrar com sua conta existente", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>

    <!-- Card do Formulário -->
    <div class="bg-white py-8 px-6 shadow-lg rounded-lg sm:px-10">
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-4">
          <!-- Name -->
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, autofocus: true, placeholder: "John Doe", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>

          <!-- Email -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "seu@email.com", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>

          <!-- Senha -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-400">Mínimo <%= @minimum_password_length %> caracteres</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Digite sua senha", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>

          <!-- Confirmação de senha -->
          <div>
            <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme sua senha", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>

          <!-- Botão -->
          <div>
            <%= f.submit "Criar Conta", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 font-medium transition-colors duration-200" %>
          </div>

        </div>
      <% end %>

      <!-- Links adicionais -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Já possui uma conta?
          <%= link_to "Entre aqui", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      </div>
      
    </div>
  </div>
</div>