<% if resource.errors.any? %>
  <div class="mb-4 rounded-xl border border-red-300 bg-red-50 dark:bg-red-900/40 dark:border-red-700 p-4">
    <h2 class="text-red-700 dark:text-red-300 font-semibold text-sm">
      <%= t('errors.messages.not_saved',
             count: resource.errors.count,
             resource: resource.class.model_name.human.downcase) %>
    </h2>
    <ul class="mt-2 list-disc list-inside text-sm text-red-600 dark:text-red-400">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
