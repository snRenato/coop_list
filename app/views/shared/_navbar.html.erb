<nav>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">

      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to "Coop List", root_path, class: "text-2xl font-extrabold text-blue-600 dark:text-blue-400 transition-colors duration-300" %>
      </div>

      <!-- Desktop Links -->
      <div class="hidden sm:flex sm:items-center sm:space-x-4">
        <%= link_to "Página Inicial", root_path, class: "text-gray-900 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-200" %>
        <%= link_to "Listas", lists_path, class: "text-gray-900 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 font-medium transition-colors duration-200" %>

        <% if user_signed_in? %>
          <%= button_to "Sair", destroy_user_session_path, method: :delete,
                class: "px-4 py-2 bg-red-500 hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700 text-white rounded-2xl shadow transition-all duration-200 font-semibold" %>
        <% else %>
          <%= link_to "Entrar", new_user_session_path,
                class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-800 text-white rounded-2xl shadow transition-all duration-200 font-semibold" %>
          <%= link_to "Registrar", new_user_registration_path,
                class: "px-4 py-2 bg-green-600 hover:bg-green-700 dark:bg-green-700 dark:hover:bg-green-800 text-white rounded-2xl shadow transition-all duration-200 font-semibold" %>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden space-x-2">
        <button id="mobile-menu-button" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="sm:hidden hidden px-2 pt-2 pb-3 space-y-1">
    <%= link_to "Página Inicial", root_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-900 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors duration-200" %>
    <%= link_to "Listas", lists_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-900 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors duration-200" %>

    <% if user_signed_in? %>
      <%= link_to "Sair", destroy_user_session_path, method: :delete,
            class: "block px-3 py-2 rounded-md bg-red-500 dark:bg-red-600 text-white hover:bg-red-600 dark:hover:bg-red-700 transition-all duration-200 font-semibold" %>
    <% else %>
      <%= link_to "Entrar", new_user_session_path,
            class: "block px-3 py-2 rounded-md bg-blue-600 dark:bg-blue-700 text-white hover:bg-blue-700 dark:hover:bg-blue-800 transition-all duration-200 font-semibold" %>
      <%= link_to "Registrar", new_user_registration_path,
            class: "block px-3 py-2 rounded-md bg-green-600 dark:bg-green-700 text-white hover:bg-green-700 dark:hover:bg-green-800 transition-all duration-200 font-semibold" %>
    <% end %>
  </div>

  <!-- Toggle scripts -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuBtn = document.getElementById("mobile-menu-button");
      const mobileMenu = document.getElementById("mobile-menu");
      menuBtn.addEventListener("click", () => mobileMenu.classList.toggle("hidden"));

      const themeToggle = document.getElementById("theme-toggle");
      const themeToggleMobile = document.getElementById("theme-toggle-mobile");
      const root = document.documentElement;

      function toggleTheme() {
        if (root.classList.contains("dark")) {
          root.classList.remove("dark");
          localStorage.setItem("theme", "light");
        } else {
          root.classList.add("dark");
          localStorage.setItem("theme", "dark");
        }
      }

      themeToggle.addEventListener("click", toggleTheme);
      themeToggleMobile.addEventListener("click", toggleTheme);

      // Mantém o tema salvo no localStorage
      if (localStorage.getItem("theme") === "dark") {
        root.classList.add("dark");
      }
    });
  </script>
</nav>
