<div class="min-h-screen py-10 px-4">
  <div class="max-w-6xl mx-auto">

    <h1 class="text-3xl sm:text-4xl font-extrabold text-center 
               text-gray-900 dark:text-white mb-10">
      Listas
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @lists.each do |list| %>
        
        <div id="<%= dom_id(list) %>" 
             class="bg-white dark:bg-gray-800 
                    rounded-3xl shadow-xl 
                    border border-gray-200 dark:border-gray-700 
                    p-6 flex flex-col justify-between 
                    hover:shadow-2xl transition-all duration-300">
          
          <div class="mb-6">
            <h2 class="text-xl font-semibold 
                       text-gray-900 dark:text-white mb-2">
              
              <%= link_to list.title, list, 
                    class: "hover:text-blue-600 dark:hover:text-blue-400 
                            transition-colors duration-200" %>
            </h2>
            
            <p class="text-sm text-gray-500 dark:text-gray-400">
              Criada em <%= list.created_at.strftime("%d/%m/%Y") %>
            </p>
          </div>

          <div class="flex justify-between mt-4">
            
            <%= link_to 'Visualizar', list, 
                  class: "inline-block px-4 py-2 
                          bg-blue-600 hover:bg-blue-700 
                          dark:bg-blue-500 dark:hover:bg-blue-600 
                          text-white rounded-2xl shadow 
                          hover:-translate-y-0.5 transition-all duration-200" %>
            
            <%= button_to 'Excluir', list_path(list),
                  method: :delete,
                  data: { turbo_confirm: 'Tem certeza que deseja excluir esta lista e todos os itens e membros?' },
                  class: "inline-block px-4 py-2 
                          bg-red-500 hover:bg-red-600 
                          dark:bg-red-600 dark:hover:bg-red-700 
                          text-white rounded-2xl shadow 
                          hover:-translate-y-0.5 transition-all duration-200" %>
          </div>
          
        </div>
      <% end %>
    </div>

    <div class="mt-10 text-center">
<%= link_to 'Nova Lista', new_list_path, 
      class: "px-6 py-3 
              text-white rounded-2xl shadow 
              font-semibold
              bg-green-600 hover:bg-green-700 
              dark:bg-green-500 dark:hover:bg-green-600 
              hover:-translate-y-0.5 transition-all duration-200" %>
    </div>

  </div>
</div>